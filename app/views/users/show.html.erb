<div class="container">
  <div class="row">
    <div class="col-md-3">
    <%= render 'layouts/user_info', user_info: @user, book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table">
      <thead>
        <th>   </th>
        <th>Title</th>
        <th>Opinion</th>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to (book.user) do %>
            <%= image_tag book.user.get_profile_image(100,100)%>
            <% end %>
            </td>
         <td><%= link_to book.title, book_path(book.id) %></td>
         <td><%= book.body %></td></tr>
         <% end %>
      </tbody>
    </table>
    </div>

  </div>
</div>