<div class="container">
  <div class="row">
    <div class="col-md-3">
    <%= render 'layouts/user_info', user_info: @user_info, book: @book_new %>
    </div>
    <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
      <tr>
        <td>
          <%= link_to user_path(@book.user_id) do %>
            <%= image_tag @book.user.get_profile_image(100,100)%><br><%= @book.user.name%>
          <% end %>
        </td>
        <td><%= link_to @book.title, book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <td><% if @book.user == current_user %>
          <%= link_to "Edit", edit_book_path , class: "btn btn-success" %>
         <% end %>
        </td>
        <td><% if @book.user == current_user %>
          <%= link_to "Destroy", book_path , method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %>
         <% end %>
        </td>
      </tr>
    </table>
    </div>
  </div>
</div>