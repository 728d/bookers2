<div class=”container”>
  <div class=”row”>
     <h2>User info</h2>
      <%= image_tag user_info.get_profile_image(100,100) %><br>
      <table>
       <tr>
        <th>name</th>
         <td><%= user_info.name %></td>
       <tr>
        <th>introduction</th>
        <td><%= user_info.introduction %></td>
       </tr>
      </table>
   </div>
   <div class=”row”>
    <button type="button" class="btn btn-outline-secondary">
  <%=link_to edit_user_path(user_info.id) do %>
   <i class="fas fa-user-cog"></i>
  <% end %>
 </button>
 </div>

<div class=”row”>
<h2>New book</h2>
  <%= form_with model: book, method: :post do |f| %>
   <p>Title</p>
    <%= f.text_field :title %>

   <p>Opinions</p>
    <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
  <% end %>
 </div>
 </div>